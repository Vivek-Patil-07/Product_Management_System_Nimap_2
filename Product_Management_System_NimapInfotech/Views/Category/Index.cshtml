@model IEnumerable<Product_Management_System_NimapInfotech.Models.Category>

@{
    ViewBag.Title = "Category List";
}

<h2>Category List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = category.CategoryId }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = category.CategoryId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
