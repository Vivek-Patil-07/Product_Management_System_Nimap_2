@model Product_Management_System_NimapInfotech.Models.Product

@{
    ViewBag.Title = "Delete Product";
}

<h2>Delete Product</h2>

<h4>Are you sure you want to delete this product?</h4>
<div>
    <strong>Product Name:</strong> @Model.ProductName
    <br />
    <strong>Category Name:</strong> @Model.Category.CategoryName
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken() <!-- Include this line -->
    @Html.HiddenFor(model => model.ProductId)
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
}
